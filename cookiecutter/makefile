# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
# Set default goal to not be dependent on sorting / ordering.
.DEFAULT_GOAL := help

# If .ONESHELL is mentioned as a target, then when a target is built
# all lines of the recipe will be given to a single invocation of the
# shell rather than each line being invoked separately.
.ONESHELL:

# switch from default /bin/sh to
SHELL := /bin/bash

SED=`command -v gsed || command -v sed`

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'


clean:  #? remove generated files & dirs
	@ rm -fr bin include lib lib64 pyvenv.cfg

install: create-venv create-dirs upgrade-pip install-packages install-dotenv install-configfile install-symlinks version  #? run all install-steps

update: upgrade-pip install-packages version  #? update the current installation

create-venv: #? create a virtual python-environment
	python3 -m venv .

create-dirs:  #? create files and directories
	@ mkdir -p etc
	@ mkdir -p var/cache
	@ mkdir -p var/cookiecutters
	@ mkdir -p var/cookiecutters_replay
	@ mkdir -p var/tmp

upgrade-pip:  #? upgrade pip itself
	bin/python -m pip install --upgrade pip

install-packages:  #? install python-packages via pip
	bin/pip install --upgrade cookiecutter cruft autoread-dotenv

install-dotenv: #? generate .dotenv from template
	@ echo -e "Copying .env.template to .env"
	@ cp -n .env.template .env
	@ echo "Please review the config in .env"
	@ echo -e "Replacing string __CWD__ -> $(PWD)"
	@ $(SED) -i 's@__CWD__@'"$(PWD)"'@' .env

install-configfile:  #? install config-file from template
	@ echo -e "Copying etc/cookiecutterrc.template to etc/cookiecutterrc"
	@ cp -n etc/cookiecutterrc.template etc/cookiecutterrc
	@ echo "Please review the config in etc/cookiecutterrc."
	@ echo -e "Replacing string __CWD__ -> $(PWD)"
	@ $(SED) -i 's@__CWD__@'"$(PWD)"'@' etc/cookiecutterrc

install-symlinks:   #? generate symlinks
	@ echo -e "Symlink $(realpath bin/cookiecutter) to ${HOME}/bin/"
	@ cd ~/bin && ln -sf $(realpath bin/cookiecutter)
	@ echo -e "Symlink $(realpath bin/cruft) to ${HOME}/bin/"
	@ cd ~/bin && ln -sf $(realpath bin/cruft)

version:  #? show current version
	@ echo -e "\nCurrent version is:"
	@ bin/cookiecutter --version
