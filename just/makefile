# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

TMPDIR := $(realpath var/tmp)

clean:
	@ rm -fr bin
	@ rm -fr var

install: create-dirs download-installer download-completions run-installer install-symlinks version

update: install

create-dirs:
	@ mkdir -p bin
	@ mkdir -p etc
	@ mkdir -p var/tmp

download-installer:
	curl -sSLf --proto '=https' --tlsv1.2 https://just.systems/install.sh > bin/install-just.sh
	@ rm -fr bin/just
	@ chmod u+x bin/install-just.sh

download-completions:
	@ cd etc && wget https://raw.githubusercontent.com/gotcha/just-bash-completion/master/just-completion.bash -O just-completion.bash

run-installer:
	bin/install-just.sh --to $(realpath bin)

install-symlinks:
	@ echo -e "Symlink $(realpath bin/just) to ${HOME}/bin/"
	@ cd ~/bin && ln -sf $(realpath bin/just)

version:
	@ echo -e "\nCurrent version is:"
	@ bin/just --version
