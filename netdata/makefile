# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'


# include re-usable makefiles
-include .make/*.mk

export NETDATA_HOME=$(realpath .)/var/netdata

SED=`command -v gsed || command -v sed`
TMP = $(shell readlink -f var/tmp)
TMPDIR = $(shell readlink -f var/tmp)

PROFILE = default  # default|minimal|complete
DEFAULT_TOOLCHAIN := stable

clean:
	@ rm -fr bin
	@ rm -fr var

create-dirs:
	@ mkdir -p bin
	@ mkdir -p etc
	@ mkdir -p var/netdata
	@ mkdir -p var/tmp

install: create-dirs download-installer run-installer install-symlinks

update: update-netdata

download-installer:
	@ curl -fLS https://my-netdata.io/kickstart.sh --output bin/netdata-kickstart.sh
	@ chmod u+x ${CARGO_HOME}/bin/netdata-kickstart.sh

run-installer:
	@ echo -e "Using TMPDIR: ${TMPDIR}"
	bin/netdata-kickstart.sh --build-only --install-prefix ${NETDATA_HOME} --disable-telemetry

update-netdata:
	@ echo -e "Updating netdata."
	# - bin/rustup update

install-symlinks:
#	@ echo -e "Symlink ${CMD} to ${HOME}/bin/"
#	@ cd ~/bin && ln -sf ${CMD}
#	ln -s  ${CARGO_HOME}/bin bin
