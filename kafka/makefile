# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

# https://kafka.apache.org/documentation.html

SCALA_VERSION=2.13
KAFKA_VERSION=3.5.1
URL="https://downloads.apache.org/kafka/${KAFKA_VERSION}/kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz"

install: create-dirs download-kafka make-instance make-symlinks

create-dirs:
	@ mkdir -p var
	@ mkdir -p var/downloads
	@ mkdir -p var/instances
	@ mkdir -p var/tmp

download-kafka:
	curl -sSf ${URL} --output var/downloads/kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz
	cd var/downloads/ && tar -xzf kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz

make-instance:
#	- mv var/downloads/neo4j-community-${KAFKA_VERSION} var/instances/${KAFKA_VERSION}

make-symlinks:
