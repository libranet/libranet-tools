# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

# see https://github.com/junegunn/fzf

THIS_DIR=$(realpath .)

clean:
	@ rm -fr bin
	@ rm -fr var

create-dirs:
	@ mkdir -p bin
	@ mkdir -p var

install: create-dirs clone-repo install-fzf create-symlinks move-dotfiles

clone-repo:
	git clone --depth 1 https://github.com/junegunn/fzf.git var/repo || git pull

install-fzf:
	cd var/repo && ./install

update:
	cd var/repo && git pull && ./install

create-symlinks:
	@ cd ~/bin && ln -sf ${THIS_DIR}/var/repo/bin/fzf
	@ cd ~/bin && ln -sf ${THIS_DIR}/var/repo/bin/fzf-tmux

move-dotfiles:
	@ mv ~/.fzf.bash ${THIS_DIR}/etc/fzf.bash-orig
	@ mv ~/.fzf.zsh ${THIS_DIR}/etc/fzf.zsh-orig
