# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

# see https://github.com/wting/autojump

THIS_DIR=$(realpath .)

clean:
	@ rm -fr bin
	@ rm -fr var

create-dirs:
	@ mkdir -p bin
	@ mkdir -p etc/profile.d
	@ mkdir -p var
	@ mkdir -p var/cache
	@ mkdir -p var/home
	@ mkdir -p var/log

install: create-dirs clone-repo install-autojump create-symlinks

clone-repo:
	git clone https://github.com/woutervh/autojump.git var/repo || git pull

install-autojump:
	# cd var/repo && ./install.py --destdir ${THIS_DIR} -zshshare ${THIS_DIR}
	cd var/repo && ./install.py --destdir ${THIS_DIR}/var/home

update:
	cd var/repo && git pull && ./install.py

create-symlinks:
	cd bin && ln -s $(realpath var/home/bin/autojump) && cd -

stat:
	bin/autojump --stat

stats: stat
