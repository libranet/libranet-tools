# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'


CMD=$(realpath bin/hadolint)

SED=`command -v gsed || command -v sed`
TMPDIR = $(shell readlink -f var/tmp)

VERSION=0.11.0
FILENAME=git-credential-oauth_${VERSION}_linux_amd64.tar.gz
DOWNLOAD_URL=https://github.com/hickford/git-credential-oauth/releases/download/v${VERSION}/${FILENAME}

clean:
	@ rm -fr bin
	@ rm -fr var

create-dirs:
	@ mkdir -p bin
	@ mkdir -p var/downloads
	@ mkdir -p var/tmp

install: create-dirs download install-symlinks

download:
	@ echo -e "Downloading ${DOWNLOAD_URL}:"
	curl -SLf ${DOWNLOAD_URL} --output var/downloads/${FILENAME}
	@ tar xzf var/downloads/${FILENAME} --directory bin/

install-symlinks:
	@ cd ~/bin && ln -sf ${CMD} git-credential-oauth
