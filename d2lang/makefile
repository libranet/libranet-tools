# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

URL=https://d2lang.com/install.sh


export TMPDIR := $(realpath var/tmp)
# export TMP := $(realpath var/tmp)
# export TEMP := $(realpath var/tmp)
export XDG_CACHE_DIR := $(realpath var/cache)


clean:
	# keep var/projects
	@ rm -fr bin
	@ rm -fr lib
	@ rm -fr share
	@ rm -fr var/cache
	@ rm -fr var/tmp

create-dirs:
	@ mkdir -p bin
	@ mkdir -p var/cache
	@ mkdir -p var/tmp

install: create-dirs download-installer run-installer install-symlinks version  #? run install-steps

update:
	bin/edgedb cli upgrade

download-installer:
	@ curl --proto '=https' --tlsv1.2 -sSf ${URL} > bin/install-d2lang.sh
	@ chmod u+x bin/install-d2lang.sh

run-installer:
	bin/install-d2lang.sh --prefix ${realpath .}

install-symlinks:
	@ echo -e "Symlink $(realpath bin/d2) to ${HOME}/bin/"
	cd ~/bin && ln -sf $(realpath bin/d2)

version:
	@ echo -e "\nCurrent version is:"
	bin/d2 --version

d2-help:  #? show d2 --help
	bin/d2 --help

d2-demo:  #? generate diagram from demo/hello.d2
	bin/d2 demo/hello.d2 --layout elk
