# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

# https://rye-up.com/guide/installation/

export RYE_HOME=$(realpath .)/var/home
export TMP=$(realpath var/tmp)

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

clean:
	@ rm -fr bin
	@ rm -fr home
	@ rm -fr var

create-dirs:
	@ mkdir -p bin
	@ mkdir -p etc
	@ mkdir -p var/tmp

install: create-dirs install-rye install-symlinks

update: update-rye

install-rye:
	@ export RYE_HOME=$(realpath .)/var/home
	@ export RYE_VERSION='latest'
	@ export RYE_INSTALL_OPTION='--yes'
	curl -fsLS https://rye-up.com/get --output bin/rye-installer.sh
	@ chmod u+x bin/rye-installer.sh
	@ echo -e "${TMP} , ${RYE_HOME}"
	@ bin/rye-installer.sh

update-rye:
	rye self update

install-symlinks:
	@ export RYE_HOME=$(realpath .)/home
	@ echo -e "Creating symlinks ${RYE_HOME}/shims/rye/* to bin/"
	@ cd bin && ln -sf ${RYE_HOME}/shims/rye && cd -
	@ cd bin && ln -sf ${RYE_HOME}/shims/python && cd -
	@ cd bin && ln -sf ${RYE_HOME}/shims/python3 && cd -
	@ cd etc && ln -sf ${RYE_HOME}/env && cd -
