# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.NOTPARALLEL:
.ONESHELL:

SED=`command -v gsed || command -v sed`

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

clean:  #? remove generated files & dirs
	@ rm -fr bin include lib lib64 pyvenv.cfg
	@ rm -fr var

install: create-dirs create-venv upgrade-pip install-packages install-extensions install-dotenv install-symlinks version #? run all install-steps

update: upgrade-pip install-packages poetry-update version #? update the current installation

create-dirs: #? create files and directories
	@ mkdir -p etc
	@ mkdir -p var/cache/poetry
	@ mkdir -p var/data
	@ mkdir -p var/tmp

create-venv: #? create a virtual python-environment
	python3 -m venv .

upgrade-pip: #? upgrade pip itself
	bin/python -m pip install --upgrade pip


install-packages: #? install python-packages via pip
	bin/pip install --upgrade autoread-dotenv
	bin/pip install --upgrade poetry

poetry-update: #? upgrade poetry itself
	bin/poetry self update

install-extensions: #? install poetry-plugins

	# see https://github.com/monim67/poetry-bumpversion
	@ echo -e "Installing poetry-plugin: poetry-bumpversion."
	bin/poetry self add poetry-bumpversion

	# see https://github.com/python-poetry/poetry-plugin-export
	@ echo -e "Installing poetry-plugin: poetry-plugin-export."
	bin/poetry self add poetry-plugin-export

 	# see https://pypi.org/project/poetry-dynamic-versioning/
	# @ echo -e "Installing poetry-plugin: poetry-dynamic-versioning."
	# bin/poetry self add "poetry-dynamic-versioning[plugin]"

	# see https://github.com/python-poetry/poetry-plugin-export
	# @ echo -e "Installing poetry-plugin: poetry-plugin-export."
	# bin/poetry self add poetry-plugin-export

	# https://github.com/madkinsz/poetry-relax
	# @ echo -e "Installing poetry-plugin: poetry-relax."
	# bin/poetry self add poetry-relax

	# see https://github.com/tiangolo/poetry-version-plugin
	# @ echo -e "Installing poetry-plugin: poetry-version-plugin."
	# bin/poetry self add poetry-version-plugin

	# see https://github.com/topenkoff/poetry-release
	# broken https://github.com/topenkoff/poetry-release/issues/6
	# @ echo -e "Installing poetry-plugin: poetry-release."
	# bin/poetry self add poetry-release

install-dotenv: #? generate .env form template
	@ echo -e "Copying .env.template to .env"
	@ cp -n .env.template .env
	@ echo "Please review the config in .env"
	@ echo -e "Replacing string __CWD__ -> $(PWD)"
	@ $(SED) -i 's@__CWD__@'"$(PWD)"'@' .env

install-symlinks: #? generate symlinks
	@ echo -e "Symlink $(realpath bin/poetry) to ${HOME}/bin/"
	@ cd ~/bin && ln -sf $(realpath bin/poetry)
	# @ cd ~/bin && ln -sf ~/.config/pypoetry etc

version: #? show current version
	@ echo -e "\nCurrent version is:"
	@ bin/poetry --version
