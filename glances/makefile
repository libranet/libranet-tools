# This is a comment.
# Important: You *must* indent using <TAB>s, not spaces.
MAKEFLAGS += --always-make --warn-undefined-variables
.DEFAULT_GOAL := help # set default goal to not be dependent on sorting / ordering.
.NOTPARALLEL:
.ONESHELL:  # all lines of the recipe will be given to a single invocation of the shell

help:  #? display this help information
	@ grep "^#?" makefile | cut -c 4-
	@ echo -e "\nThis help is generated by parsing the inline comments."
	@ echo -e "Please use \`make <target>' where <target> is one of:\n"
	@ grep -E '^[a-zA-Z_-]+:.*?#?.*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?#\\? "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'


SED=`command -v gsed || command -v sed`
CMD=$(realpath bin/glances)

clean:
	@ rm -fr bin include lib lib64 pyvenv.cfg share

create-dirs:
	@ mkdir -p var/cache
	@ mkdir -p var/log
	@ mkdir -p var/tmp

install: create-venv create-dirs upgrade-pip install-packages install-dotenv install-symlinks version

update: upgrade-pip install-packages version

create-venv:
	python3 -m venv .

upgrade-pip:
	bin/python -m pip install --upgrade pip

install-packages:
	# https://github.com/nicolargo/glances
	# bin/pip install --upgrade glances
	bin/pip install --upgrade autoread-dotenv
	bin/pip install --upgrade 'glances[action,browser,cloud,cpuinfo,docker,export,folders,gpu,graph,ip,raid,snmp,web,wifi]'
	bin/pip install --upgrade sparklines
	bin/pip install --upgrade pySMART

install-dotenv:
	@ echo -e "Copying .env.template to .env" ;\
	cp -n .env.template .env ;\
	echo "Please review the config in .env"
	@ echo -e "Replacing string __CWD__ -> $(PWD)" ;\
	$(SED) -i 's@__CWD__@'"$(PWD)"'@' .env

install-symlinks:  create-dirs
	@ echo -e "Symlink ${CMD} to ${HOME}/bin/"
	@ cd ~/bin && ln -sf ${CMD}
	@ cd var && ln -sf ~/.cache/glances log

version:
	@ echo -e "\nCurrent version is:"
	@ bin/glances --version
